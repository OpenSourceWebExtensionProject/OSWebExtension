{
    "manifest_version": 2,
    "name":             "Axon - multilingual dictionary",
    "description":      "Find definitions in all Wordnik dictionaries, Wikipedia articles and Wiktionary entries in every available language.",
    "author":           "Ivo van Kamp",
    "short_name":       "Axon",
    "version":          "2.6.23",
    // "options_page":     "Content/Settings/settings.html",
    "applications": {
        "gecko": {
            "id": "dude@users.noreply.github.com",
            "strict_min_version": "54.0a1"
        }
    },
    "background": {
        "scripts": [
            "Content/Config.js", 
            "Content/Lib/DataObjects/XhrRequestData.js", 
            "Content/Lib/DataObjects/DictionaryData.js", 
            "Content/Lib/DataObjects/ErrorData.js",
            "Content/Lib/ParserFilter.js",
            "Content/Lib/StringHelper.js",
            "Content/Lib/WikiFilter.js",
            "Event.js"
        ],
        "persistent": false
    },
  
    "content_scripts": [{
        "js": [
            "Content/Config.js",
            "Content/Lib/DomHelper.js",
            "Content/Lib/StringHelper.js",
            "Content/Lib/ParserFilter.js",
            "Content/Lib/WikiFilter.js",
            "Content/Lib/DataObjects/DictionaryData.js",
            "Content/Lib/DataObjects/XhrRequestData.js",
            "Content/Lib/DataObjects/ErrorData.js",
            "Content/Lib/Request.js",
            "Content/Lib/Template/_Bubble.js",
            "Content/Lib/Template/Template.js",
            "Content/Lib/Template/OpenLayers/ol.js",
            "Content/Lib/Template/OpenLayers/ol3-geocoder.js",
            "Content/Lib/Selection.js",
            "Content/Lib/Listener.js",
            "Content/Main.js"
        ],
        "matches": [ "<all_urls>" ],
        "run_at": "document_end"
    }],
  
    "permissions": [
      "storage",
      "tabs",
      "http://*/*", "https://*/*"
    ],
  
    "icons": {
       "128": "Images/Wordnik-logo-128.png",
       "16": "Images/Wordnik-logo-16.png",
       "32": "Images/Wordnik-logo-32.png",
       "48": "Images/Wordnik-logo-48.png"
    },

    "browser_action": {
      "default_icon": "Images/Wordnik-logo-64.png",
      "default_popup": "Content/Popover/popover.html",
      "default_title": "Axon"
    }

}
